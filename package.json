{
  "name": "ante-apocalypse-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:client": "pnpm --filter @ante/client dev",
    "dev:server": "pnpm --filter @ante/server dev",
    "build": "pnpm -r build",
    "check": "pnpm -r check",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitest/browser": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
